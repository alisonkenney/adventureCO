<h2>New Adventure</h2>

<form action="/adventures" method="post">
  <label for="adventure[price]">Category:</label>
    <select name="adventure[category]">
      <option value="Sporting">Sporting</option>
      <option value="Social">Social</option>
      <option value="Active">Active</option>
      <option value="Music">Music</option>
      <option value="Family">Family</option>
      <option value="Adrenaline">Adrenaline</option>
    </select>

  <label for="adventure[name]">Name:</label>
  <input name="adventure[name]">

  <label for="adventure[description]">Description:</label>
  <input name="adventure[description]">
  
  <label for="adventure[photo_url]">Photo_url:</label>
  <input name="adventure[photo_url]">

  <label for="adventure[price]">Price:</label>
  <select name="adventure[price]">
    <option value="free">Free</option>
    <option value="$0 - $50">$0 - $50</option>
    <option value="$50 - $100">$50 - $100</option>
    <option value="$100+">$100+</option>
  </select>

  <label for="adventure[location]">Location:</label>
  <input name="adventure[location]">

  <input type="submit" value="Create">
</form>

