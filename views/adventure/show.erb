<div class="category-background-show">
<div class="overlay"></div>

<div class="row category-box-show">
			<div class="col-md-6 col-md-offset-3">
				<div class="category-box show-border">
					<div class="row">
						<div class="col-md-5">	
							<img src="<%= @adventure.photo_url %>" class="  individual-img">
						</div>
						<div class="right-side">
							<div class="col-md-7">	
								<h2 class="adventure-titles"><%= @adventure.name %></h2>
								<div class="adventure-details">
									<p><%= @adventure.description %></p>
									<p><u>Price:</u> <%= @adventure.price %></p>
									<p><u>Address:</u> <a href="<%= @adventure.googlemaps_url %>" target="_blank"> <%= @adventure.location %> </a></p>
								</div>
								
								<div class="row">
									<div class="col-md-2 col-md-offset-2">
				        				<a href="/adventures/<%= @adventure.id %>/edit">
				          					<button class="btn show-btn">Edit</button>
				        				</a>
				        			</div>	
				        			<div class="col-md-2">		
	          							<form method="post" action="/adventures/<%= @adventure.id %>">  
	            						<input name="_method" value="DELETE" type="hidden"/>
	            							<button class="btn show-btn">Delete</button>
	          							</form>
	          						</div>	
								</div>	
							</div>
						</div>
					</div>			
				</div>
			</div>
		</div>			
</div>	















